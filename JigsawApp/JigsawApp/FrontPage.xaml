<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JigsawApp.FrontPage">
    <ContentPage.Content>
        <Grid Background="LightBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height='1*'></RowDefinition>
                <RowDefinition Height='1*'></RowDefinition>
                <RowDefinition Height='1*'></RowDefinition>
                <RowDefinition Height='1*'></RowDefinition>
                <RowDefinition Height='1*'></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Text="Zookie puzzle" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="60" FontAttributes="Bold" TextColor="White"></Label>
            <Image Grid.Row="1" Source="Zookie.png" Grid.RowSpan="3"></Image>
           

            <Button Text="Play" Grid.Row="4" Clicked="PlayClicked"  Margin="100,40,100,40" BackgroundColor="RoyalBlue"></Button>
        </Grid>

    </ContentPage.Content>
</ContentPage>