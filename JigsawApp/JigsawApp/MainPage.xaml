<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JigsawApp.MainPage">

    <StackLayout BackgroundColor="LightBlue">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1" x:Name="grd">

                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Image
                    Source="Zookie1.jpg"
                    ClassId="Image1"
                    Grid.Row="0" 
                    Grid.Column="0" 
                    Margin="45,0,0,0"
                    Rotation="{Binding PictureOneRot}"
                    
                    x:Name="PictureOne">
                    
                <Image.GestureRecognizers>
                <TapGestureRecognizer
                    Tapped="OnTapGestureRecognizerTappedRotate"
                    NumberOfTapsRequired="2"/>
                 <TapGestureRecognizer
                    Tapped="OnTapGestureRecognizerTappedMove">
                 </TapGestureRecognizer>
                 </Image.GestureRecognizers>
                 </Image>
                
                <Image 
                    Source="Zookie2.jpg" 
                    ClassId="Image2"
                    Grid.Row="0" Grid.Column="1"
                    Margin="0,0,45,0" 
                    Rotation="{Binding PictureTwoRot}"
                    x:Name="PictureTwo">
                <Image.GestureRecognizers>
                <TapGestureRecognizer
                  Tapped="OnTapGestureRecognizerTappedRotate"
                  NumberOfTapsRequired="2"/>
                        <TapGestureRecognizer
                    Tapped="OnTapGestureRecognizerTappedMove">
                        </TapGestureRecognizer>
                    </Image.GestureRecognizers>
                </Image>
                
            <Image
                Source="Zookie3.jpg" 
                ClassId="Image3"
                Grid.Row="1" Grid.Column="0"
                Margin="45,0,0,0"
                Rotation="{Binding PictureTreeRot}"
                x:Name="PictureTree">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer
                Tapped="OnTapGestureRecognizerTappedRotate"
                        NumberOfTapsRequired="2"/>
                        <TapGestureRecognizer
                    Tapped="OnTapGestureRecognizerTappedMove">
                        </TapGestureRecognizer>
                    </Image.GestureRecognizers>
            </Image>
                
            <Image 
                Source="Zookie4.jpg" 
                ClassId="Image4"
                Rotation="{Binding PictureFourRot}"
                Grid.Row="1" Grid.Column="1"
                Margin="0,0,45,0"
                x:Name="PictureFour">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer
                Tapped="OnTapGestureRecognizerTappedRotate"
                        NumberOfTapsRequired="2"/>
                        <TapGestureRecognizer
                    Tapped="OnTapGestureRecognizerTappedMove">
                        </TapGestureRecognizer>
                    </Image.GestureRecognizers>
            </Image>
            </Grid>
            <Button Text="Test" Clicked="Button_Clicked"></Button>
            
        </Grid>
    </StackLayout>

</ContentPage>
